  "item": [
    {
      "name": "Submit Feedback - Quiz Completion (Full)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}",
            "description": "JWT access token"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"articleId\": \"123e4567-e89b-12d3-a456-426614174000\",\n  \"rating\": 5,\n  \"quizRelevant\": true,\n  \"improvementText\": \"The article was very clear and the quiz questions were spot on!\",\n  \"trigger\": \"quiz_completion\",\n  \"quizScore\": 5,\n  \"readingTime\": 180\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/feedback/article",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "feedback", "article"]
        },
        "description": "Submit feedback after completing quiz with all optional fields filled"
      },
      "response": []
    },
